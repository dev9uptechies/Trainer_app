<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TrainerApp" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@android:color/black</item> <!-- Make sure this is black -->
        <item name="colorAccent">@color/teal_200</item>

        <item name="android:fitsSystemWindows">true</item>

        <!-- Explicitly set status and navigation bar colors -->
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>

        <!-- Force dark icons in navigation bar -->
        <item name="android:windowLightNavigationBar">false</item>

        <item name="bottomNavigationStyle">@style/BlackBottomNavigation</item>
    </style>

    <!-- Custom style (optional) -->
    <style name="BlackBottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/black</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@android:color/holo_blue_dark</item>
        <item name="colorPrimary">@android:color/darker_gray</item>
        <item name="android:textColorPrimary">@color/design_default_color_on_primary</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="EditText_bar_Login" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="singleLine">true</item>
    </style>
    <style name="Theme.TrainerApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.TrainerApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.TrainerApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>