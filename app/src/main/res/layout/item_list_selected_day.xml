<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:elevation="@dimen/_10sdp"
        app:cardBackgroundColor="#313131"
        app:cardCornerRadius="@dimen/_10sdp"
        tools:ignore="MissingConstraints">

            <androidx.cardview.widget.CardView
                android:id="@+id/rela_dragged"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:cardBackgroundColor="#212121"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_3sdp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/click"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvFname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/poppins_medium"
                                android:paddingStart="@dimen/_10sdp"
                                android:text="Test Name"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_16sdp" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_5sdp">

                            <TextView
                                android:id="@+id/tvgoal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="0dp"
                                android:fontFamily="@font/poppins_medium"
                                android:paddingStart="@dimen/_10sdp"
                                android:text="Goal:"
                                android:textColor="#BBBBBB"
                                android:textSize="@dimen/_13sdp" />

                            <TextView
                                android:id="@+id/tv_unit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:text="Unit: 01 m"
                                android:textColor="#BBBBBB"
                                android:textSize="@dimen/_13sdp"
                                android:visibility="visible" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_athlet"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:paddingStart="@dimen/_10sdp"
                                android:text="Interested Athletes:"
                                android:textColor="#BBBBBB"
                                android:layout_weight="1"
                                android:layout_marginBottom="@dimen/_3sdp"
                                android:textSize="@dimen/_13sdp"
                                android:visibility="visible" />

                            <ImageView
                                android:id="@+id/img_edit"
                                android:layout_width="@dimen/_17sdp"
                                android:layout_height="@dimen/_17sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/img_edit"
                                app:tint="@color/splash_text_color" />

                        </LinearLayout>


                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/relaend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/_8sdp">

                        <LinearLayout
                            android:id="@+id/image_lay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_alignParentEnd="true">

                            <TextView
                                android:id="@+id/tv_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="bottom"
                                android:layout_marginEnd="@dimen/_4sdp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Date"
                                android:textColor="#BBBBBB"
                                android:textSize="@dimen/_13sdp" />

                            <CheckBox
                                android:id="@+id/myCheckBox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="false"
                                android:buttonTint="@color/red"
                                android:visibility="visible"/>


                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</RelativeLayout>