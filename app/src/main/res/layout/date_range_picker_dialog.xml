<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/_20sdp"
    android:gravity="center">

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Text_15_White_Poppins_Medium"
        android:background="@drawable/calendar_background"
        app:mcv_showOtherDates="all"
        app:mcv_selectionColor="@color/black1"
        app:mcv_arrowColor="#FFFFFF"
        app:mcv_headerTextAppearance="@style/HeaderTextAppearance"
        app:mcv_dateTextAppearance="@style/DateTextAppearance" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/holo_red_dark"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="@dimen/_255sdp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:fontFamily="@font/poppins_medium"
            android:layout_weight="1"
            android:text="Close"
            android:layout_margin="@dimen/_3sdp"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:background="@drawable/dialog_home_btn"
            android:backgroundTint="@color/gray"
            android:gravity="center"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/confirmButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:fontFamily="@font/poppins_medium"
            android:layout_weight="1"
            android:layout_margin="@dimen/_3sdp"
            android:text="Apply"
            android:textAllCaps="false"
            android:background="@drawable/dialog_home_btn"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>