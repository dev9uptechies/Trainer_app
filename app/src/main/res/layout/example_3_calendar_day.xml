<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:id="@+id/date_bg"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/exThreeDayText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_medium"
        android:textSize="@dimen/_12sdp"
        tools:text="22" />

    <View
        android:id="@+id/dot_linear"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:visibility="gone"
        android:background="@drawable/bg_red_round_corner_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/exThreeDayText"
        app:layout_constraintStart_toStartOf="@+id/exThreeDayText"
        app:layout_constraintTop_toBottomOf="@+id/exThreeDayText" />

</androidx.constraintlayout.widget.ConstraintLayout>