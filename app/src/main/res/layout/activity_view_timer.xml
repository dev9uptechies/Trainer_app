<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ViewTimerActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/view_exercise_bg_image"
        android:paddingBottom="@dimen/_20sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/create_bg"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:src="@drawable/back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Timer"
                    android:textColor="@color/splash_text_color"
                    android:textSize="@dimen/_18sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_180sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:backgroundTint="@color/card_background"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:layout_weight="1"
                                    android:backgroundTint="@color/grey"
                                    app:cardCornerRadius="@dimen/_10sdp"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_margin="@dimen/_3sdp"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="0dp"
                                            android:layout_gravity="start"
                                            android:layout_margin="@dimen/_2sdp"
                                            android:layout_weight="1"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:fontFamily="@font/poppins_medium"
                                                android:text="Round No"
                                                android:textColor="@color/dark_text"
                                                android:textSize="@dimen/_11sdp" />

                                            <TextView
                                                android:id="@+id/tv_round"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:fontFamily="@font/poppins_medium"
                                                android:text="00 Round"
                                                android:textColor="@color/dark_text"
                                                android:textSize="@dimen/_11sdp" />

                                        </LinearLayout>

                                        <ImageView
                                            android:layout_width="@dimen/_55sdp"
                                            android:layout_height="@dimen/_3sdp"
                                            android:src="@drawable/white_line" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="0dp"
                                            android:layout_gravity="start"
                                            android:layout_margin="@dimen/_2sdp"
                                            android:layout_weight="1"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:fontFamily="@font/poppins_medium"
                                                android:text="Round"
                                                android:textColor="@color/dark_text"
                                                android:textSize="@dimen/_11sdp" />

                                            <TextView
                                                android:id="@+id/tvTimer"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:fontFamily="@font/poppins_medium"
                                                android:text="00:00:00"
                                                android:textColor="@color/dark_text"
                                                android:textSize="@dimen/_11sdp" />

                                        </LinearLayout>

                                        <ImageView
                                            android:layout_width="@dimen/_55sdp"
                                            android:layout_height="@dimen/_3sdp"
                                            android:src="@drawable/white_line" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_gravity="start"
                                            android:layout_margin="@dimen/_2sdp"
                                            android:layout_weight="1"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:fontFamily="@font/poppins_medium"
                                                android:text="Weight"
                                                android:textColor="@color/dark_text"
                                                android:textSize="@dimen/_11sdp" />

                                            <TextView
                                                android:id="@+id/tv_weight"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:fontFamily="@font/poppins_medium"
                                                android:text="0"
                                                android:textColor="@color/dark_text"
                                                android:textSize="@dimen/_11sdp" />

                                        </LinearLayout>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:orientation="vertical"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <TextView
                                        android:id="@+id/time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/poppins_medium"
                                        android:text="00:00:00"
                                        android:textColor="@color/dark_text"
                                        android:textSize="@dimen/_18sdp"/>

                                    <ImageView
                                        android:id="@+id/play"
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_height="@dimen/_25sdp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:src="@drawable/ic_play_1" />

                                    <ImageView
                                        android:id="@+id/reset"
                                        android:layout_width="@dimen/_60sdp"
                                        android:layout_height="@dimen/_25sdp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:src="@drawable/ic_reset" />
                                </LinearLayout>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:layout_weight="1"
                                    android:backgroundTint="@color/grey"
                                    app:cardCornerRadius="@dimen/_10sdp"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_margin="@dimen/_3sdp"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="0dp"
                                            android:layout_gravity="start"
                                            android:layout_margin="@dimen/_2sdp"
                                            android:layout_weight="1"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:fontFamily="@font/poppins_medium"
                                                android:text="Cycle No"
                                                android:textColor="@color/dark_text"
                                                android:textSize="@dimen/_11sdp" />

                                            <TextView
                                                android:id="@+id/tv_cycle"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:fontFamily="@font/poppins_medium"
                                                android:text="0"
                                                android:textColor="@color/dark_text"
                                                android:textSize="@dimen/_11sdp" />

                                        </LinearLayout>

                                        <ImageView
                                            android:layout_width="@dimen/_55sdp"
                                            android:layout_height="@dimen/_3sdp"
                                            android:src="@drawable/white_line" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="0dp"
                                            android:layout_gravity="start"
                                            android:layout_margin="@dimen/_2sdp"
                                            android:layout_weight="1"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:fontFamily="@font/poppins_medium"
                                                android:text="Pause"
                                                android:textColor="@color/dark_text"
                                                android:textSize="@dimen/_11sdp" />

                                            <TextView
                                                android:id="@+id/tv_pause"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:fontFamily="@font/poppins_medium"
                                                android:text="00 min,00 sec"
                                                android:textColor="@color/dark_text"
                                                android:textSize="@dimen/_11sdp" />

                                        </LinearLayout>

                                        <ImageView
                                            android:layout_width="@dimen/_55sdp"
                                            android:layout_height="@dimen/_3sdp"
                                            android:src="@drawable/white_line" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="0dp"
                                            android:layout_gravity="start"
                                            android:layout_margin="@dimen/_2sdp"
                                            android:layout_weight="1"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:fontFamily="@font/poppins_medium"
                                                android:text="Distance"
                                                android:textColor="@color/dark_text"
                                                android:textSize="@dimen/_11sdp" />

                                            <TextView
                                                android:id="@+id/tv_distance"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:fontFamily="@font/poppins_medium"
                                                android:text="0"
                                                android:textColor="@color/dark_text"
                                                android:textSize="@dimen/_11sdp" />

                                        </LinearLayout>
                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="bottom"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:backgroundTint="@color/grey"
                                app:cardCornerRadius="@dimen/_10sdp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/_3sdp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/poppins_medium"
                                        android:text="Pause Between Cycle"
                                        android:textColor="@color/dark_text"
                                        android:textSize="@dimen/_11sdp" />

                                    <TextView
                                        android:id="@+id/tv_pause_between"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/poppins_medium"
                                        android:text="time"
                                        android:textColor="@color/dark_text"
                                        android:textSize="@dimen/_11sdp" />

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/sectionLiner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Section:"
                                android:textColor="@color/dark_text"
                                android:textSize="@dimen/_13sdp" />

                            <TextView
                                android:id="@+id/tv_section"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Specific warm-up"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_13sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/goalLiner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Goal:"
                                android:textColor="@color/dark_text"
                                android:textSize="@dimen/_13sdp" />

                            <TextView
                                android:id="@+id/tv_goal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Strength"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_13sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/equipmentLiner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Equipment:"
                                android:textColor="@color/dark_text"
                                android:textSize="@dimen/_13sdp" />

                            <TextView
                                android:id="@+id/tv_equpment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Dumbbell"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_13sdp" />

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/cycle_recycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_50sdp"
                            android:visibility="visible"
                            tools:itemCount="10"
                            tools:listitem="@layout/cycle_item_list" />

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_edit_exercise"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/splash_text_color"
            app:cardCornerRadius="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="Edit Exercise"
                android:textColor="@color/white"
                android:textSize="@dimen/_17sdp" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/Progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>