                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Pre Competitive"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/ly_pre_competitive_s_date"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/card_colour"
                            app:cardCornerRadius="@dimen/_10sdp">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edt_pre_competitive_s_date"
                                style="@style/Editext_Round_10_Not_Clickable"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:clickable="false"
                                android:cursorVisible="false"
                                android:fontFamily="@font/poppins_medium"
                                android:hint="Select Start Date"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/white"
                                android:textColorHint="#BBBBBB"
                                android:textSize="@dimen/_12sdp" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/ly_pre_competitive_e_date"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/card_colour"
                            app:cardCornerRadius="@dimen/_10sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/edt_pre_competitive_e_date"
                                    style="@style/Editext_Round_10_Not_Clickable"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:clickable="false"
                                    android:cursorVisible="false"
                                    android:fontFamily="@font/poppins_medium"
                                    android:hint="End Date"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textColor="@color/white"
                                    android:textColorHint="#BBBBBB"
                                    android:textSize="@dimen/_12sdp" />

                                <ImageView
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_weight="1"
                                    android:src="@drawable/ic_calendar" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Total No.of Days:"
                            android:textColor="@color/dark_text"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="00 Days"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sdp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:src="@drawable/white_line" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Competitive"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/ly_competitive_s_date"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/card_colour"
                            app:cardCornerRadius="@dimen/_10sdp">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edt_competitive_s_date"
                                style="@style/Editext_Round_10_Not_Clickable"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:clickable="false"
                                android:cursorVisible="false"
                                android:fontFamily="@font/poppins_medium"
                                android:hint="Select Start Date"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/white"
                                android:textColorHint="#BBBBBB"
                                android:textSize="@dimen/_12sdp" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/ly_competitive_e_date"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/card_colour"
                            app:cardCornerRadius="@dimen/_10sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/edt_competitive_e_date"
                                    style="@style/Editext_Round_10_Not_Clickable"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:clickable="false"
                                    android:cursorVisible="false"
                                    android:fontFamily="@font/poppins_medium"
                                    android:hint="@string/end_date"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textColor="@color/white"
                                    android:textColorHint="#BBBBBB"
                                    android:textSize="@dimen/_12sdp" />

                                <ImageView
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_weight="1"
                                    android:src="@drawable/ic_calendar" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Total No.of Days:"
                            android:textColor="@color/dark_text"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="00 Days"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sdp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/list_ly"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_pre_season"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_80sdp"
                        app:cardBackgroundColor="#26929492"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/planing_name_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Pre Season"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_16sdp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/startdate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Start: "
                                android:textColor="#BBBBBB"
                                android:textSize="@dimen/_12sdp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/planing_name_1" />

                            <TextView
                                android:id="@+id/tv_start_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:text="25 March, 2021"
                                android:textColor="#BBBBBB"
                                android:textSize="@dimen/_12sdp"
                                app:layout_constraintStart_toEndOf="@+id/startdate"
                                app:layout_constraintTop_toBottomOf="@+id/planing_name_1" />

                            <TextView
                                android:id="@+id/mesocycle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Mesocycle: "
                                android:textColor="#BBBBBB"
                                android:textSize="@dimen/_12sdp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/startdate" />

                            <TextView
                                android:id="@+id/tv_mesocycle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:text="02 Cycle"
                                android:textColor="#BBBBBB"
                                android:textSize="@dimen/_12sdp"
                                app:layout_constraintStart_toEndOf="@+id/mesocycle"
                                app:layout_constraintTop_toBottomOf="@+id/tv_start_date" />

                            <TextView
                                android:id="@+id/enddate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="End: "
                                android:textColor="#BBBBBB"
                                android:textSize="@dimen/_12sdp"
                                app:layout_constraintEnd_toStartOf="@+id/tv_end_date"
                                app:layout_constraintTop_toTopOf="@+id/startdate" />

                            <TextView
                                android:id="@+id/tv_end_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="27 March, 2021"
                                android:textColor="#BBBBBB"
                                android:textSize="@dimen/_12sdp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/startdate" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_pre_competitive"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:cardBackgroundColor="#26929492"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/planing_name_2"
