<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#4D929492"
        app:cardCornerRadius="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="@dimen/_5sdp"
            android:layout_height="match_parent">


            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerInParent="true"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/round_image"
                app:layout_constraintEnd_toEndOf="@+id/round_image"
                app:layout_constraintStart_toStartOf="@+id/round_image"
                app:layout_constraintTop_toTopOf="@+id/round_image" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/round_image"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/app_icon"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:riv_corner_radius="@dimen/_5sdp"
                app:riv_border_color="@color/white"
                app:riv_border_width="@dimen/_1sdp"/>

            <TextView
                android:id="@+id/group_name"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="Group Name"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                app:layout_constraintStart_toEndOf="@+id/round_image" />


            <LinearLayout
                android:id="@+id/sport_text_ly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/group_name"
                app:layout_constraintStart_toStartOf="@+id/group_name"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sport: "
                    android:textColor="@color/dark_text"
                    android:textSize="@dimen/_11sdp"
                    android:fontFamily="@font/poppins_medium"/>


                <TextView
                    android:id="@+id/tv_sport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mixed martial arts"
                    android:textColor="@color/dark_text"
                    android:textSize="@dimen/_11sdp"
                    android:fontFamily="@font/poppins_medium"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/training_day_text_ly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/sport_text_ly"
                app:layout_constraintStart_toStartOf="@+id/sport_text_ly"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Training Days: "
                    android:textColor="@color/dark_text"
                    android:textSize="@dimen/_11sdp"
                    android:fontFamily="@font/poppins_medium"/>


                <TextView
                    android:id="@+id/days_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="36 Days"
                    android:textColor="@color/dark_text"
                    android:textSize="@dimen/_11sdp"
                    android:fontFamily="@font/poppins_medium"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/work_loaded_text_ly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/training_day_text_ly"
                app:layout_constraintStart_toStartOf="@+id/training_day_text_ly"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Workload: "
                    android:textColor="#C6C511"
                    android:textSize="@dimen/_11sdp"
                    android:fontFamily="@font/poppins_medium"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50%"
                    android:textColor="#C6C511"
                    android:textSize="@dimen/_11sdp"
                    android:fontFamily="@font/poppins_medium"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24 Cycle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:visibility="gone"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginEnd="@dimen/_5sdp"
                android:textColor="@color/dark_text"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>