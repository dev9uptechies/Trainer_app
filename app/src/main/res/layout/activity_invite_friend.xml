<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Invite_friendActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/create_bg">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:src="@drawable/back"
            app:layout_constraintBottom_toBottomOf="@+id/tv_credit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_credit"/>

        <TextView
            android:id="@+id/tv_credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/poppins_medium"
            android:text="Invite Friend"
            android:textColor="@color/splash_text_color"
            android:textSize="@dimen/_18sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/tv_credit">


            <androidx.cardview.widget.CardView
                android:id="@+id/translate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                app:cardBackgroundColor="#1A929492"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="Share your Referral Code"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="@string/inviteFriend"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            app:cardBackgroundColor="@color/light_darkgrey">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Referral Code"
                                android:textStyle="bold"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:textColor="@color/white"
                                android:layout_gravity="center_vertical"
                                android:textSize="@dimen/_14sdp"/>
                            <TextView
                                android:id="@+id/referral_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="54gfgf54f"
                                android:textStyle="bold"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/_200sdp"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14sdp"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/copy_url"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/copy"/>
                        <ImageView
                            android:id="@+id/whatsapp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/whatsapp"/>
                        <ImageView
                            android:id="@+id/instagram"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/instagram"/>
                        <ImageView
                            android:id="@+id/facebook"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/facebook"/>
                        <ImageView
                            android:id="@+id/link"
                            android:layout_marginStart="@dimen/_50sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/link"/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>