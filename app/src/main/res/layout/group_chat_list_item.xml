<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/group_chate_boarder"
            android:layout_height="@dimen/_60sdp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/round_image"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/_5sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/group_name"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:text="Group Name"
                android:textColor="#F3F3F3"
                android:singleLine="true"
                android:maxLines="1"
                android:textSize="@dimen/_14sdp"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintStart_toEndOf="@+id/round_image"
                app:layout_constraintTop_toTopOf="@+id/round_image"
                android:layout_marginStart="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/chat_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="It is a long established fact that..."
                android:textColor="#F3F3F3"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintStart_toEndOf="@+id/round_image"
                app:layout_constraintTop_toBottomOf="@+id/group_name"
                android:layout_marginStart="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/tv_cycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24 Cycle"
                android:textColor="#BBBBBB"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/_10sdp"
                app:layout_constraintTop_toTopOf="@+id/group_name"
                android:layout_marginStart="@dimen/_10sdp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>