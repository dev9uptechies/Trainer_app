<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_5sdp"
    android:layout_height="wrap_content">

 <androidx.cardview.widget.CardView
     android:layout_width="match_parent"
     app:cardBackgroundColor="#1A929492"
     app:cardCornerRadius="@dimen/_10sdp"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     android:layout_marginTop="@dimen/_5sdp"
     android:layout_height="wrap_content">

     <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/click"
         android:layout_width="match_parent"
         android:padding="@dimen/_5sdp"
         android:layout_height="match_parent">

         <TextView
             android:id="@+id/tvFname"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:layout_constraintTop_toTopOf="parent"
             android:text="Program Name"
             android:layout_marginStart="@dimen/_10sdp"
             android:textColor="@color/white"
             android:textSize="@dimen/_13sdp"
             android:fontFamily="@font/poppins_semi_bold"/>


         <ImageView
             android:id="@+id/image"
             android:layout_width="@dimen/_20sdp"
             android:layout_height="@dimen/_20sdp"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/_5sdp"
             android:layout_marginTop="@dimen/_5sdp"
             android:src="@drawable/ic_favorite_red"/>

         <TextView
             android:id="@+id/goal"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Goal:"
             android:layout_marginStart="@dimen/_10sdp"
             android:textColor="@color/dark_text"
             app:layout_constraintTop_toBottomOf="@+id/tvFname"
             android:textSize="@dimen/_11sdp"
             android:fontFamily="@font/poppins_semi_bold"/>

         <TextView
             android:id="@+id/date"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:fontFamily="@font/poppins_semi_bold"
             android:text="Goal:"
             android:textColor="@color/dark_text"
             android:layout_marginEnd="@dimen/_5sdp"
             android:visibility="gone"
             android:textSize="@dimen/_11sdp"
             app:layout_constraintBottom_toBottomOf="@+id/image"
             app:layout_constraintEnd_toStartOf="@+id/image"
             app:layout_constraintTop_toTopOf="@+id/image" />


         <TextView
             android:id="@+id/unit"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:fontFamily="@font/poppins_semi_bold"
             android:text="Unit:"
             android:visibility="gone"
             android:textColor="@color/dark_text"
             android:textSize="@dimen/_11sdp"
             app:layout_constraintEnd_toEndOf="@+id/image"
             app:layout_constraintTop_toBottomOf="@+id/date" />


         <TextView
             android:id="@+id/tvgoal"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="2 Program"
             android:layout_marginStart="@dimen/_5sdp"
             android:textColor="@color/dark_text"
             android:fontFamily="@font/poppins_semi_bold"
             app:layout_constraintStart_toEndOf="@+id/goal"
             android:textSize="@dimen/_11sdp"
             app:layout_constraintTop_toTopOf="@+id/goal"
             app:layout_constraintBottom_toBottomOf="@+id/goal"/>


         <TextView
             android:id="@+id/tvinAt"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:fontFamily="@font/poppins_semi_bold"
             android:text="2 Program"
             android:textColor="@color/dark_text"
             android:textSize="@dimen/_11sdp"
             android:visibility="gone"
             app:layout_constraintStart_toStartOf="@+id/goal"
             app:layout_constraintTop_toBottomOf="@+id/goal" />

         <TextView
             android:id="@+id/total_time"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:fontFamily="@font/poppins_semi_bold"
             android:text="Total Time:"
             android:textColor="@color/dark_text"
             android:textSize="@dimen/_11sdp"
             app:layout_constraintStart_toStartOf="@+id/tvinAt"
             app:layout_constraintTop_toBottomOf="@+id/tvinAt" />

         <TextView
             android:id="@+id/tv_athlet"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="01 day"
             android:layout_marginStart="@dimen/_5sdp"
             android:textColor="@color/dark_text"
             android:fontFamily="@font/poppins_semi_bold"
             app:layout_constraintStart_toEndOf="@+id/total_time"
             android:textSize="@dimen/_11sdp"
             app:layout_constraintTop_toTopOf="@+id/total_time"
             app:layout_constraintBottom_toBottomOf="@+id/total_time"/>

     </androidx.constraintlayout.widget.ConstraintLayout>

 </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>